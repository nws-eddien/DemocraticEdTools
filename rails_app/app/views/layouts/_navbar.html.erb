<nav class="navbar grid_navbar">
  <div data-controller="toggle-left-nav-drawer" class="d-flex align-center">
    <%= button_to "", toggle_left_nav_drawer_path,class: "fa-solid fa-bars icon icon-button icon-white mr-2"%>
    <span class="navbar-title">
      ToolsForDemocraticSchools
    </span>
  </div>
  <div class="d-flex align-center mr-6">
    <% if user_signed_in? %>
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar, :size => 30, class: "mr-2"%>
      <%end %>
      <span class="mr-2"><%= current_user.name.capitalize %></span>
      <%= button_to icon('fa-solid', 'sign-out', class:"fa-1x"),
                    destroy_user_session_path,
                    method: :delete,
                    class: "icon icon-white icon-button" %>
    <% else %>
      <%= button_to icon('fa-solid', 'sign-in', class:"fa-1x"),
