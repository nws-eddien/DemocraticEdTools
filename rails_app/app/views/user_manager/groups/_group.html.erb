<%= turbo_frame_tag group do %>
  <div class="card">
      <div class="card-content">
        <%= link_to group.name, user_manager_group_path(group), data: { turbo_frame: "_top" } %>
      </div>
      <div class="card-actions">
        <%= button_to "Löschen", user_manager_group_path(group),form: { data: { turbo_confirm: "Möchtest du die Gruppe #{group.name.titleize} wirklich löschen?" } }, method: :delete, class: "btn btn-red mr-2"%>
        <%= link_to "Bearbeiten",  edit_user_manager_group_path(group), class: "btn btn-yellow" %>
      </div>
  </div>
<% end %>