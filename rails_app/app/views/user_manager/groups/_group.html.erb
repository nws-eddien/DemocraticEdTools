<%= turbo_frame_tag group do %>
  <div class="card">
    <div class="card-content">
      <div class="list-item">
        <%= link_to group.name, user_manager_group_path(group), data: { turbo_frame: "_top" } %>
        <div class="list-item-append">
          <%= button_to icon('fa-solid', 'trash', class:"fa-1x"), user_manager_group_path(group),form: { data: { turbo_confirm: "Möchtest du die Gruppe #{group.name.titleize} wirklich löschen?" } }, method: :delete, class: "btn btn-red mr-2"%>
          <%= link_to icon('fa-solid', 'pen-to-square', class:"fa-1x"), edit_user_manager_group_path(group), class: "btn btn-yellow" %>
        </div>
      </div>
    </div>
  </div>
<% end %>