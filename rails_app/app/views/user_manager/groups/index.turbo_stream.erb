<%= turbo_stream.append "groups" do %>
  <%= render partial: "user_manager/groups/group", collection: @groups %>
<% end %>

<% if @next_page.present? %>
  <%= turbo_stream.replace "load_more" do %>
    <%= turbo_frame_tag "load_more", src: user_manager_groups_path(page: @next_page, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% end %>