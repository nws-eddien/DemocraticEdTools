<%= turbo_frame_tag "membershiplevel_edit_users_#{@membershiplevel.id}" do %>
  <%= simple_form_for [:user_manager, @membershiplevel], url: user_manager_membershiplevels_update_users_path(@membershiplevel) do |f| %>
    <div class="multiselect">
      <div class="multiselect_selected_items_wrapper" id="membershiplevel_<%= @membershiplevel.id %>_selected_users"></div>
      <%= f.button :submit, "Speichern", class: "btn-green" %>
      <div class="multiselect_wrapper"
           data-multiselect-elements-value="<%= @multiselect_elements_value %>"
           data-multiselect-names-value="<%= @multiselect_names_value %>"
           data-multiselect-targetid-value="membershiplevel_<%= @membershiplevel.id %>_selected_users"
           data-controller="multiselect">
        <%= f.collection_check_boxes :user_ids, @users, :id, :name do |b| %>
          <%= label_tag "membershiplevel_#{@membershiplevel.id}_user_ids_#{b.object.id}", class: 'multiselect_item' do %>
            <%= b.check_box(id: "membershiplevel_#{@membershiplevel.id}_user_ids_#{b.object.id}",
                            class: "checkbox multiselect_checkbox",
                            "data-action": "multiselect#update_selection") %>
            <%= b.object.name.titleize %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>